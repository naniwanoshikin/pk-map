<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%# responsive %>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%# タイトルロゴ %>
      <%= link_to "PK map", root_path, id: "logo" %>
    </div>

    <nav>
      <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse">
        <%# ホーム %>
        <li class=""><%= link_to root_path do %>
          <i class="fa fa-home fa-lg"></i>
        <% end %></li>
        <%# 8 %>
        <% if user_signed_in? %>
          <%# レスポンシブ %>
          <%# 通知 %>
          <li class="only_pc"><%= render 'layouts/circle' %></li>
          <%# 投稿 %>
          <li class="only_pc"><%= link_to new_post_path do %>
            <i class="fas fa-pencil-alt fa-lg"></i>
          <% end %></li>
          <%# マイページ %>
          <li class="only_pc"><%= link_to current_user do %>
            <i class="fas fa-user fa-lg"></i>
          <% end %></li>
          <%# ドロップダウンメニュー %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%# 歯車 %>
              <i class="fas fa-cog fa-lg"></i>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "ユーザー一覧", users_path %></li>
              <li><%= link_to "About",   about_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "About",   about_path %></li>
          <li><%= link_to "Log in", user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
