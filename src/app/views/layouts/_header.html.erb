<header class="navbar navbar-expand-lg navbar-light bg-dark">
  <%# タイトル %>
  <%= link_to "PK map", root_path, id: "logo", class: 'navbar-brand' %>
  <%# ボタン %>
  <button class="navbar-toggler bg-light" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <nav class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <%# ホーム %>
        <%= link_to root_path, class: 'nav-link text-light' do %>
          <i class="fa fa-home fa-lg"></i>
          <span class="sr-only">(current)</span>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <%# レスポンシブ %>
        <%# 通知 %>
        <li class="nav-item only_pc">
          <%= render 'layouts/circle' %>
        </li>
        <%# 投稿 %>
        <li class="nav-item only_pc">
          <%= link_to new_post_path, class: 'nav-link text-light' do %>
          <i class="fas fa-pencil-alt fa-lg"></i>
        <% end %></li>
        <%# マイページ %>
        <li class="nav-item only_pc"><%= link_to current_user, class: 'nav-link text-light' do %>
          <i class="fas fa-user fa-lg"></i>
        <% end %></li>
        <%# ドロップダウンメニュー %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%# 歯車 %>
            <i class="fas fa-cog fa-lg"></i>
          </a>
          <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to "ユーザー一覧", users_path, class: "dropdown-item text-light" %>
            <%= link_to "About", about_path, class: "dropdown-item text-light" %>
            <%= link_to "ログアウト", destroy_user_session_path, class: "dropdown-item text-light", method: :delete %>
          </div>
        </li>
      <% else %>
        <li class="nav-item"><%= link_to "About",  about_path, class: 'nav-link text-light' %></li>
        <li class="nav-item"><%= link_to "Log in", user_session_path, class: 'nav-link text-light' %></li>
      <% end %>
    </ul>
  </nav>
</header>
