<header class="navbar navbar-expand-lg navbar-light bg-dark">
  <%# タイトル %>
  <%= link_to "PK map", root_path, id: "logo", class: 'navbar-brand' %>
  <%# ボタン %>
  <button class="navbar-toggler bg-light" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <nav class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav ml-auto mr-5">
      <%# ログインしている場合 %>
      <% if user_signed_in? %>
        <%# レスポンシブ: only_pc %>
        <%# ホーム %>
        <li class="nav-item only_pc">
          <%= link_to root_path, class: 'nav-link' do %>
            <i class="fa fa-home fa-lg"></i>
            <span class="sr-only">(current)</span>
          <% end %>
        </li>
        <%# 通知 %>
        <li class="nav-item only_pc">
          <%= link_to notifications_path, class: 'nav-link notice' do %>
            <i class="far fa-bell fa-lg">
              <%= render 'layouts/circle' %>
            </i>
          <% end %>
        </li>
        <%# 投稿 %>
        <li class="nav-item only_pc">
          <%= link_to new_post_path, class: 'nav-link' do %>
          <i class="fas fa-pencil-alt fa-lg"></i>
        <% end %></li>
        <%# マイページ %>
        <li class="nav-item only_pc"><%= link_to current_user, class: 'nav-link' do %>
          <i class="fas fa-user fa-lg"></i>
        <% end %></li>
        <%# ドロップダウン %>
        <li class="nav-item dropdown">
          <%# About %>
          <%= link_to "About", about_path, class: "dropdown-item only_phone" %>
          <%# 歯車 %>
          <a class="nav-link dropdown-toggle pl-4 pl-md-0" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-cog fa-lg"></i>
          </a>
          <%# 一覧 %>
          <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to "ユーザー一覧", users_path, class: "dropdown-item" %>
            <%= link_to "ログアウト", destroy_user_session_path, class: "dropdown-item", method: :delete %>
          </div>
        </li>
      <% else %>
      <%# ログインしていない場合 %>
        <li class="nav-item only_pc not_signed_in"><%= link_to "Home", root_path, class: 'nav-link mr-2' %></li>
        <li class="nav-item"><%= link_to "About", about_path, class: 'nav-link mr-2' %></li>
        <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, class: 'nav-link mr-2' %></li>
        <li class="nav-item"><%= link_to "Log in", user_session_path, class: 'nav-link' %></li>
      <% end %>
    </ul>
  </nav>
</header>
