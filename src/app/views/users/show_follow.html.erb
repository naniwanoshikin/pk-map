<%# フォロー一覧 %>
<% provide(:title, @title) %>

<div class="row">
  <aside class="col-md-5">
    <section class="user_info">
      <%= render 'shared/user_info', user: @user %>
    </section>
    <%# 統計情報 %>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%# アイコン一覧 %>
    <% if @users.any? %>
      <div class="user_avatars">
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, size: 30), user %>
        <% end %>
      </div>
    <% end %>
  </aside>
  <div class="col-md-7">
    <h2><%= @title %></h2>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= paginate @users %>
    <% end %>
  </div>
</div>
