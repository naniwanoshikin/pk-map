<%# プロフィール %>
<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: 50 %>
        <%= @user.name %>
      </h1>
    </section>
    <%# 統計情報 %>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <% if current_user?(@user) %>
      <%# プロフィール編集 %>
      <section class="profile_edit">
        <%= link_to "プロフィール編集", edit_user_registration_path, class: "btn btn-default" %>
      </section>
    <% else %>
      <%# [follow] ボタン %>
      <%= render 'follow_form' if user_signed_in? %>
    <% end %>
  </aside>
  <%# pagination %>
  <div class="col-md-8">
    <div id="ajax_users_show">
      <%= render 'users/show_posts' %>
    </div>
  </div>
</div>
