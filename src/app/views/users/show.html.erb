<%# プロフィール %>
<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <%# 統計情報 %>
    <section class="shared_stats">
      <%= render 'shared/stats' %>
    </section>
    <%# [follow] ボタン %>
    <%= render 'follow_form' if user_signed_in? %>
  </aside>
  <%# 13 %>
  <div class="col-md-8">
    <%# pagination %>
    <div id="ajax_users_show">
      <%= render 'users/show_posts' %>
    </div>
  </div>
</div>
